<Defs>
<FactionDef>
    <defName>TribeApini</defName>
    <label>tribal hive</label>
    <description>A tribal hive of Apini, they toil hard and long everyday to survive. Apini are not the most intelligent sort, many communities never surpassing a neolithic level of technology. They range from friendly to outright hostile, depending on their previous interactions with humans. \n \nThey are often raided for their delicious honey.</description>
    <pawnsPlural>tribal apini</pawnsPlural>
    <baseSelectionWeight>1</baseSelectionWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <raidCommonality>100</raidCommonality>
    <canStageAttacks>true</canStageAttacks>
    <homeIconPath>Apini/npcZoom</homeIconPath>
    <expandingIconTexture>Apini/npc</expandingIconTexture>
    <colorSpectrum>
      <li>(255,127,80)</li>
      <li>(255,215,0)</li>
      <li>(102, 0, 0)</li>
    </colorSpectrum>
    <startingGoodwill>
      <min>10</min>
      <max>30</max>
    </startingGoodwill>
    <mustStartOneEnemy>false</mustStartOneEnemy>
    <factionNameMaker>NamerFactionHive</factionNameMaker>
    <baseNameMaker>NamerbaseHive</baseNameMaker>
    <techLevel>Neolithic</techLevel>
    <backstoryCategory>Tribal</backstoryCategory>
    <leaderTitle>Overseer</leaderTitle>
    <hairTags>
      <li>Apini</li>
    </hairTags>
    <naturalColonyGoodwill>
      <min>-50</min>
      <max>10</max>
    </naturalColonyGoodwill>
    <caravanTraderKinds>
      <li>Caravan_Apini_BulkGoods</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Neolithic_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>base_Apini_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-15</min>
      <max>50</max>
    </allowedArrivalTemperatureRange>
    <pawnGroupMakers>
        <li>
        <kindDef>Normal</kindDef>
        <options>
          <ApiniPawn>100</ApiniPawn>
          <ApiniOverseer>10</ApiniOverseer>
        </options>
        </li>
        <li>
        <kindDef>Trader</kindDef>
        <traders>
          <ApiniTrader>1</ApiniTrader>
        </traders>
        <carriers>
          <Dromedary>2</Dromedary>
           <Muffalo>1</Muffalo>
        </carriers>
        <guards>
          <ApiniPawn>150</ApiniPawn>
          <ApiniPawn>150</ApiniPawn>
        </guards>
      </li>
      <li>
        <kindDef>FactionBase</kindDef>
        <options>
          <ApiniPawn>100</ApiniPawn>
          <ApiniOverseer>70</ApiniOverseer>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>
  
    <PawnKindDef>
    <defName>ApiniPawn</defName>
    <baseRecruitDifficulty>0.75</baseRecruitDifficulty>
        <label>apini</label>
    <race>Apini</race>
    <labelMale>apini drone</labelMale>
    <labelFemale>apini</labelFemale>
    <combatPower>25</combatPower>
    <apparelTags>
      <li>Bee</li>
    </apparelTags>
        <apparelMoney>
      <min>200</min>
      <max>400</max>
    </apparelMoney>
    <backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
    <backstoryCategory>Tribal</backstoryCategory>
    <defaultFactionType>TribeApini</defaultFactionType>
</PawnKindDef>

